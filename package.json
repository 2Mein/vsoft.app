{
	"name": "rapideapp",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"start": "node node_modules/react-native/local-cli/cli.js start",
		"test": "jest --coverage",
		"tsc": "tsc",
		"clean": "rimraf lib",
		"build": "npm run clean && npm run tsc --",
		"lint": "tslint src/**/*.ts",
		"watch": "npm run build -- -w",
		"start:ios": "npm run build && concurrently -r 'npm run watch' 'react-native run-ios'",
		"start:android": "npm run build && concurrently -r \"npm run watch\" \"react-native run-android\""
	},
	"dependencies": {
		"react": "16.0.0-beta.5",
		"react-native": "0.49.3",
		"react-navigation": "^1.0.0-beta.15",
		"react-redux": "^5.0.6",
		"redux": "^3.7.2",
		"redux-thunk": "^2.2.0",
		"typescript-fsa": "^2.5.0",
		"typescript-fsa-reducers": "^0.4.4",
		"typescript-fsa-redux-thunk": "^2.0.0-beta.6"
	},
	"devDependencies": {
		"@types/jest": "^21.1.5",
		"@types/react": "^16.0.19",
		"@types/react-native": "^0.49.5",
		"@types/react-navigation": "^1.0.22",
		"@types/react-redux": "^5.0.12",
		"@types/react-test-renderer": "^16.0.0",
		"@types/redux": "^3.6.0",
		"babel-jest": "^21.2.0",
		"babel-preset-react-native": "^4.0.0",
		"concurrently": "^3.5.0",
		"jest": "^21.2.1",
		"react-test-renderer": "^16.0.0",
		"reactotron-react-native": "^1.12.3",
		"reactotron-redux": "^1.12.2",
		"rimraf": "^2.6.2",
		"tslint": "^5.8.0",
		"typescript": "^2.6.1"
	},
	"jest": {
		"preset": "react-native"
	}
}
